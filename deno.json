{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  },
  "lock": false,
  "nodeModulesDir": true,
  "tasks": {
    "style": "deno fmt && deno lint",
    "watch": "deno run --watch --allow-read --allow-env --allow-sys --allow-net src/app.js",
    "start": "deno fmt && deno lint && deno task watch"
  },
  "imports": {
    "mongoose": "npm:mongoose@8.0.1",
    "express": "npm:express@4.18.2"
  }
}
